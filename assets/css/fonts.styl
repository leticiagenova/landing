@import url("https://fonts.googleapis.com/css?family=EB+Garamond|Questrial|Maven+Pro")

FONT_SANS_LIGHT =
  font-family 'Questrial', sans-serif
  font-weight 300

FONT_SANS_REGULAR =
  font-family 'Questrial', sans-serif
  font-weight 400

FONT_SANS_SEMIBOLD =
  font-family 'Questrial', sans-serif
  font-weight 600

FONT_SANS_BOLD =
  font-family 'Questrial', sans-serif
  font-weight 700

FONT_SERIF_LIGHT =
  font-family 'EB Garamond', serif
  font-weight 300

FONT_SERIF_REGULAR =
  font-family 'EB Garamond', serif
  font-weight 400

FONT_SERIF_SEMIBOLD =
  font-family 'EB Garamond', serif
  font-weight 600

FONT_SERIF_BOLD =
  font-family 'EB Garamond', serif
  font-weight 700

base-font-size = 16
base-line-height = 24
//This is the useful part: it compares the given value to the base values and calculates the correct output
rem-size($fontValue = base-font-size, $baseFontValue = base-font-size, $baseLineValue = base-line-height)
  font-size ($fontValue / $baseFontValue) rem
  line-height ($baseLineValue/$baseFontValue) * ($fontValue / $baseFontValue) rem unless @line-height

