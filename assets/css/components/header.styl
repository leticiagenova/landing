/*QUESTIONS HEADER*/

div.form_group
  column(2/7, $gutter: 0)
  display inline
  color #fff
  margin-top 460px
  label
    font-size 2vh
    {FONT_SANS_REGULAR}
  input[type="radio"] /* custom checkbox*/
    display none
    & + label:before /* unchecked icon */
      display inline-block
      content ''
      width 15px
      height 15px
      border 2px solid #fff
      border-radius 50%
      margin-right 20px
    &:checked + label:before  /* checked icon */
      border-color red
      -webkit-transition 0.3s ease-in
      -moz-transition 0.3s ease-in
      -o-transition 0.3s ease-in
      transition 0.3s ease-in
  input[type="text"] /* custom text field */
    border none
    border-bottom 2px solid #dcdfe1
    outline none
    background-color transparent
    font-size 1.2em
    color #fff
    margin-top 6px
    &.input_todo
      width 25vh
    &.input_togo
      width 26vh
    &:focus
      border-bottom-color #3C6EB2
      -webkit-transition 0.3s ease-in
      -moz-transition 0.3s ease-in
      -o-transition 0.3s ease-in
      transition 0.3s ease-in
  button  /*BUTTON SEARCH HEADER*/
    font-size 1.4vw
    color #414141
    padding 15px 45px 15px 45px
    border-radius 5px
    border #fff
    background-color #fff
    //letter-spacing 0.1em
    font-family 'Maven Pro', sans-serif;
    font-weight 500
    &:hover
      background-color #3C6EB2
      color #fff

